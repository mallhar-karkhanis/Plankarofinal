<% layout("/layouts/boilerplate")%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on Plankaro</h1>
    <div class="col-6 offset-3">

        <form action="/signup" method="POST" class="needs-validation" novalidate>

            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" placeholder="Enter title" class="form-control" id="username" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" placeholder="Enter title" class="form-control" id="email" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input type="password" name="password" placeholder="Enter title" class="form-control" id="password" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>


            <button class="btn btn-success ">SignUp</button>







        </form>

        </div>

    </div>


